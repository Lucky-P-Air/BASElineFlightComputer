<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#111111"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.platypii.baseline.views.laser.LaserActivity">

    <com.platypii.baseline.views.charts.FlightProfileTouchable
        android:id="@+id/flightProfile"
        android:layout_width="360dp"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/flightProfileStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/flightProfile"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:padding="5dp"
        android:textSize="22sp"
        android:background="@drawable/panel"
        android:visibility="gone"
        tools:ignore="RtlHardcoded" />

    <FrameLayout
        android:id="@+id/laserPanel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/flightProfile"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
