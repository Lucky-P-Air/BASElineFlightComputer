<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        tools:context="com.platypii.baseline.views.laser.LaserEditActivity">

    <com.platypii.baseline.views.charts.FlightProfile
            android:id="@+id/flightProfile"
            android:layout_width="match_parent"
            android:layout_height="240dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/laserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Exit Name"/>

        <Spinner
                android:id="@+id/laserUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/metric_modes"/>

    </LinearLayout>

    <EditText
            android:id="@+id/laserText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:hint="10, -100"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/laserCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"/>

        <Button
                android:id="@+id/laserSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"/>

    </LinearLayout>

</LinearLayout>
