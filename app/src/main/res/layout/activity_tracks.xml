<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.platypii.baseline.views.tracks.TrackListActivity"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/track_list_frag"
        android:name="com.platypii.baseline.views.tracks.TrackListFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/track_list"/>

    <include layout="@layout/sign_in_panel"/>

</LinearLayout>
