<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.platypii.baseline.views.map.MapActivity">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.platypii.baseline.views.map.MapFragment" />

    <fragment
        android:id="@+id/flightStatsFragment"
        android:name="com.platypii.baseline.views.map.FlightStatsFragment"
        android:layout_width="155sp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="left|top"
        android:layout_margin="2dp"
        android:background="@drawable/panel"
        android:contentDescription="@string/map_pin"
        android:src="@drawable/ic_pin"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/crosshair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_crosshair"
        android:contentDescription="@string/map_crosshair"
        android:visibility="gone" />

</merge>
