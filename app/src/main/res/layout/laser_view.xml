<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.platypii.baseline.views.laser.LaserViewFragment">

    <TextView
        android:id="@+id/laserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/laserDelete"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/laserLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/laserName"
        android:textIsSelectable="true"/>

    <TextView
        android:id="@+id/laserMeasurementsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/laserLocation"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/laserText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/laserMeasurementsLabel"
        android:textIsSelectable="true"/>

    <Button
        android:id="@+id/laserDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:drawablePadding="6dp"
        android:drawableEnd="@drawable/button_delete"
        android:text="@string/action_delete"
        android:visibility="gone"
        style="@style/Widget.AppCompat.Button.Borderless" />


</RelativeLayout>
