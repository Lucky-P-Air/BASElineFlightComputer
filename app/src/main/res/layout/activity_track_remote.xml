<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.platypii.baseline.views.tracks.TrackRemoteActivity"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <TextView
        android:id="@+id/trackDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#dddddd" />

    <TextView
        android:id="@+id/trackLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <include
        layout="@layout/chart_stats"/>

    <include
        layout="@layout/track_buttons_remote"/>

    <fragment
        android:id="@+id/charts"
        android:layout_below="@id/chartStats"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.platypii.baseline.views.charts.ChartsFragment" />

</RelativeLayout>
